<view class="container">
  <!-- 消息提示组件 -->
  <t-message id="t-message" customStyle="width : 90wv" />
  
  <!-- 用户信息卡片 -->
  <view class="profile-header">
    <view class="avatar">文</view>
    <text class="user-name">普通用户</text>
    <text class="user-desc">UID: dislffd01j3k2kdxpd3</text>
    
    <!-- 统计数据 -->
    <view class="stats">
      <view class="stat-item">
        <text class="stat-number">{{stats.extractCount}}</text>
        <text class="stat-label">提取次数</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{stats.points}}</text>
        <text class="stat-label">积分</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{stats.shareCount}}</text>
        <text class="stat-label">分享次数</text>
      </view>
    </view>
  </view>
  
  <!-- 操作按钮区域 -->
  <view class="action-section">
    <!-- 行级注释：分享应用按钮 -->
    <view class="action-item" bindtap="onShareApp">
      <view class="action-icon share-icon">
        <t-icon name="share" size="20" color="#ffffff" />
      </view>
      <view class="action-content">
        <text class="action-title">分享应用</text>
        <text class="action-desc">分享后获取{{appConfig.sharePoint}}积分</text>
      </view>
      <t-icon name="chevron-right" size="16" t-class="arrow-icon" />
    </view>
    
    <!-- 行级注释：打赏作者按钮 -->
    <view class="action-item" bindtap="onRewardAuthor">
      <view class="action-icon reward-icon">
        <t-icon name="heart-filled" size="20" color="#ffffff" />
      </view>
      <view class="action-content">
        <text class="action-title">打赏作者</text>
        <text class="action-desc">支持开发者继续创作</text>
      </view>
      <t-icon name="chevron-right" size="16" t-class="arrow-icon" />
    </view>
    
    <!-- 行级注释：联系作者按钮 -->
    <view class="action-item" bindtap="onContactAuthor">
      <view class="action-icon contact-icon">
        <t-icon name="service" size="20" color="#ffffff" />
      </view>
      <view class="action-content">
        <text class="action-title">联系作者</text>
        <text class="action-desc">反馈问题或建议</text>
      </view>
      <t-icon name="chevron-right" size="16" t-class="arrow-icon" />
    </view>
  </view>

  <!-- 底部提示 -->
  <t-footer text="{{profileFooterInfo}}"></t-footer>
</view>
